<Window x:Class="TimeBasedRacingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeBasedRacingGame"
        mc:Ignorable="d"
        Title="C# Speed Rush" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Race Setup Section -->
        <GroupBox Grid.Row="0" Header="Race Setup" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="carComboBox" Width="200" Margin="5" 
                          DisplayMemberPath="Name" SelectedIndex="0"/>
                <Button x:Name="startRaceButton" Content="Start Race" Margin="5" 
                        Width="100" Click="StartRaceButton_Click"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Race Information Section -->
        <GroupBox Grid.Row="1" Header="Race Information">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Lap Information -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Lap:" Margin="5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RaceManager.LapDisplay}" Margin="5"/>
                
                <!-- Lap Progress -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Lap Progress:" Margin="5"/>
                <ProgressBar Grid.Row="1" Grid.Column="1" Height="20" Margin="5" 
                             Value="{Binding RaceManager.LapProgress}"/>
                
                <!-- Fuel Information -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Fuel Level:" Margin="5"/>
                <ProgressBar Grid.Row="2" Grid.Column="1" Height="20" Margin="5" 
                             Maximum="{Binding RaceManager.SelectedCar.FuelCapacity}"
                             Value="{Binding RaceManager.SelectedCar.CurrentFuel}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding RaceManager.SelectedCar.CurrentFuel, StringFormat={}{0:0.0} liters}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <!-- Time Information -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Time Remaining:" Margin="5"/>
                <ProgressBar Grid.Row="3" Grid.Column="1" Height="20" Margin="5" 
                             Maximum="60" Value="{Binding RaceManager.TimeRemaining}"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding RaceManager.TimeRemainingDisplay}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <!-- Speed Information -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Current Speed:" Margin="5"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding RaceManager.SelectedCar.CurrentSpeed, StringFormat={}{0:0} km/h}" Margin="5"/>
                
                <!-- Race Status -->
                <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" x:Name="statusTextBlock" 
                           TextWrapping="Wrap" Margin="5" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="speedUpButton" Content="Speed Up" Width="100" Margin="5" 
                    Click="SpeedUpButton_Click" IsEnabled="False"/>
            <Button x:Name="maintainSpeedButton" Content="Maintain Speed" Width="100" Margin="5" 
                    Click="MaintainSpeedButton_Click" IsEnabled="False"/>
            <Button x:Name="pitStopButton" Content="Pit Stop" Width="100" Margin="5" 
                    Click="PitStopButton_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>